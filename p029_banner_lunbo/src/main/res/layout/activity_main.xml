<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:orientation="vertical">

        <com.example.p029_banner_lunbo.bannerutils.fangyuan.BannerView
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            app:indicator_circle_radius="4dp"
            app:indicator_current_color="#ffffff"
            app:indicator_current_size="30dp"
            app:indicator_current_style="large"
            app:indicator_normal_color="#FF9297BC"
            app:indicator_padding="8dp"
            app:indicator_position="center"
            app:indicator_visible="true"
            app:scroll_time="3000" />

        <!--<com.example.p029_banner_lunbo.bannerutils.fangyuan.BannerViewFang-->
            <!--android:id="@+id/banner"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="400dp"-->
            <!--app:indicator_circle_radius="4dp"-->
            <!--app:indicator_current_color="#ffffff"-->
            <!--app:indicator_normal_color="#FF9297BC"-->
            <!--app:indicator_padding="8dp"-->
            <!--app:indicator_position="center"-->
            <!--app:indicator_visible="true"-->
            <!--app:scroll_time="3000" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/tv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_left" />

    <TextView
        android:id="@+id/tv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/icon_right" />
</RelativeLayout>
